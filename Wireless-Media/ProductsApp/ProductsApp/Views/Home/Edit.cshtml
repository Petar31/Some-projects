@model ProductsApp.Models.Proizvodi
@using ProductsApp.Models;
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">

        @{
            Proizvodi proizvodi = CRUDProducts.GetProizvodiById(Convert.ToInt32(ViewData["id"]));
            using (Html.BeginForm("Update", "Home", FormMethod.Post))
            {
                @Html.TextBoxFor(m=>m.id, null, new { @class = "visible" })
        <div class="form-group">
            @Html.Label("Naziv")
            @Html.TextBoxFor(m => m.naziv, new { @class = "form-control", @Value = proizvodi.naziv })
            @Html.ValidationMessageFor(m => m.naziv, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.Label("Opis")
            @Html.TextBoxFor(m => m.opis, null, new { @class = "form-control", @Value = proizvodi.opis })
            @Html.ValidationMessageFor(m => m.opis, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Kategorija")
            @Html.TextBoxFor(m => m.kategorija, null, new { @class = "form-control", @Value = proizvodi.kategorija })
            @Html.ValidationMessageFor(m => m.kategorija, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Proizvodjac")
            @Html.TextBoxFor(m => m.proizvodjac, null, new { @class = "form-control", @Value = proizvodi.proizvodjac })
            @Html.ValidationMessageFor(m => m.proizvodjac, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Dobavljac")
            @Html.TextBoxFor(m => m.dobavljac, null, new { @class = "form-control", @Value = proizvodi.dobavljac })
            @Html.ValidationMessageFor(m => m.dobavljac, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Cena")
            @Html.TextBoxFor(m => m.cena, null, new { @class = "form-control", @Value = proizvodi.cena, type = "number" })
            @Html.ValidationMessageFor(m => m.cena, "", new { @class = "text-danger" })
        </div>
                <div>
                    <input type="submit" value="Sacuvaj izmene" class="btn btn-danger" />
                </div>


            }


        }



    </div>
    <div class="col-4">
      
    </div>

</div>

