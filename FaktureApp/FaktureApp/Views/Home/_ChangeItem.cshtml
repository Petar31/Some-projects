@model FaktureApp.Models.Fakture.Stavka

<div class="row">
    <div class="col-sm-12">
        <form asp-action="ChangeItem" id="form1" method="post" class="d-flex justify-content-around" data-ajax="true" data-ajax-update="#res2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BrojDokumenta" />
            <div class="form-group col-sm-2">
                <label asp-for="RedniBroj" class="control-label"></label>
                <input asp-for="RedniBroj" type="text" class="form-control" readonly />
            </div>


            <div class="form-group col-sm-3">
                <label asp-for="Kolicina" class="control-label"></label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>

            <div class="form-group col-sm-3">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <input asp-for="Ukupno" type="hidden" />
            <div class="form-group col-sm-2 d-flex align-items-end">
                <input type="submit" id="change" value="Zapamti" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<script>
    //$("#change").on("click", function () {
    //    alert("Cao");
    //})
    $("#form1").submit(function () {
        
        setTimeout(refresh, 1000);
        });

    function refresh() {
        var val = $("#select").val();
        $.post("/Home/_FindItems?select=" + val, function (data) {
            $("#res").html("");

            $("#res").html(data);
        });
        }
    //})
</script>

