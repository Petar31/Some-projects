@model FaktureApp.Models.Fakture.Faktura

@{
    ViewData["Title"] = "Delete";
}

<div class="row d-flex justify-content-center">
    <div class="col-sm-4">
        <h2 class="d-flex justify-content-center">Obrisi fakturu @Model.BrojFakture ?</h2>
    </div>
</div>


    <div class="row d-flex justify-content-center">
        <div class="col-sm-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.BrojFakture)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.BrojFakture)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DatumDokumenta)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DatumDokumenta)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Ukupno)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Ukupno)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="BrojDokumenta" />
                <input type="submit" value="Obrisi" class="btn btn-danger" /> 
                <a asp-action="Index">Nazad na fakture</a>
            </form>
        </div>
        </div>
            
      
