@model FaktureApp.Models.Fakture.Stavka



<div class="row d-flex" id="row2Create">
    <div class="col-sm-2 d-flex align-items-center">
        <h4>Nova Stavka</h4>
    </div>

    <div class="col-sm-10">
        <form asp-action="NewItem" class="d-flex justify-content-around">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label class="control-label">Broj fakture</label>
                <select asp-for="BrojDokumenta" class="form-control">
                    @foreach (var item in ViewBag.BrojFakture)
                    {
                        <option value="@item.BrojDokumenta">@item.BrojFakture</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Kolicina" class="control-label"></label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
           
            <div class="form-group d-flex align-items-end">
                <input type="submit" value="Dodaj stavku" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
