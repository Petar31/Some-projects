@using WebApp.Resources;
@{
    ViewBag.title = Resource.Contact;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
</head>
<body>
    <div> 
        <div class="row">
            <div class="col-sm-12 card-header text-center bg-info" id="contactHeader">
                <h1>@Resource.Contact</h1>
            </div>
        </div>
        
        <div class="row" id="contactContainer">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Message text</label>
                    <textarea class="form-control"></textarea>
                </div>
                <div>
                    <input type="button" class="btn btn-info" value="Send">
                </div>
               



            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</body>
</html>
