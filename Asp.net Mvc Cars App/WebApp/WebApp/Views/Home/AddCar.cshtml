@model WebApp.Models.Car
@using WebApp.Resources;
@using WebApp.Models;
@{
    ViewBag.Title = Resource.AddCar;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body >
    <div class="row" id="addContainer" style="">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header bg-warning text-lg-center text-danger" id="addHeader">@Resource.AddCar</div>
                <div class="card-body bg-transparent">
                    @using (Html.BeginForm("AddCar", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m=>m.Make)
                            @Html.TextBoxFor(m => m.Make, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Make, null, new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m=>m.Model)
                            @Html.TextBoxFor(m => m.Model, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Model, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ProductionYear)
                            @Html.TextBoxFor(m => m.ProductionYear, null, new { @class = "form-control", @type = "number" })
                            @Html.ValidationMessageFor(m => m.ProductionYear, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.EngineVolume) <label> (cm<sup>3</sup>)</label>
                            @Html.TextBoxFor(m => m.EngineVolume, null, new { @class = "form-control", @type = "number" })
                            @Html.ValidationMessageFor(m => m.EngineVolume, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.EnginePower) <span>(kw)</span>
                            @Html.TextBoxFor(m => m.EnginePower, null, new { @class = "form-control", @type = "number" })
                            @Html.ValidationMessageFor(m => m.EnginePower, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CarBody)
                            @Html.TextBoxFor(m => m.CarBody, null, new { @class = "form-control", @placeholder = "ex. SUV, limousine, sport coupe, crossover..." })
                            @Html.ValidationMessageFor(m => m.CarBody, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Description)
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Price) <span>(EUR)</span> 
                            @Html.TextBoxFor(m => m.Price, null, new { @class = "form-control", @type = "number" })
                            @Html.ValidationMessageFor(m => m.Price, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Contact)
                            @Html.TextBoxFor(m => m.Contact, null, new { @class = "form-control", @type = "email" })
                            @Html.ValidationMessageFor(m => m.Contact, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>@Resource.AddImagesLabel</label><br />
                            <input type="file" name="fileUpload" id="fileUpload" multiple="multiple" />
                        </div>
                        <div>
                            <input type="submit" value="@Resource.AddCar" class="btn btn-danger" />
                        </div>



                    }
                </div>
            </div>






        </div>
        <div class="col-sm-3"></div>



    </div>
</body>
</html>
